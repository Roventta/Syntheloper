CXX       := g++
CXX_FLAGS := -Wall -Wextra -std=c++17 -ggdb

BIN     := bin
SRC     := src
INCLUDE := include
LIB     := ../lib
LIBRARIES   := -lSDL2 -lrt -lm -lasound -ljack -lportaudio -pthread
EXECUTABLE  := main

all: $(BIN)/$(EXECUTABLE)

run: clean all
	clear
	@echo "ðŸš€ Executing..."
	./$(BIN)/$(EXECUTABLE)

$(BIN)/$(EXECUTABLE): $(OBJECTS) $(SRC)/*.cpp
	@echo "ðŸš§ Building..."
	$(CXX) $(CXX_FLAGS) -I$(INCLUDE) -L$(LIB) $^ -o $@ $(LIBRARIES)

clean:
	@echo "ðŸ§¹ Clearing..."
	-rm $(BIN)/*
